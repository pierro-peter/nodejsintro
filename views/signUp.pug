doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Signup - Happy Hoe Grocery Ltd.
  link(rel='stylesheet' href='/public/css/signUp.css')
header
  h1 Happy Hoe Grocery Ltd.
main.form-container
  form#signup-form
    h2 Create Your Account
    .form-group
      label(for='name') Full Name:
      input#name(type='text' name='name' placeholder='Enter your full name' required='')
    .form-group
      label(for='email') Email:
      input#email(type='email' name='email' placeholder='Enter your email' required='')
    .form-group
      label(for='username') Username:
      input#username(type='text' name='username' placeholder='Enter your username' required='')
    .form-group
      label(for='password') Password:
      input#password(type='password' name='password' placeholder='Enter your password' required='')
      input#show-password(type='checkbox')
      label(for='show-password') Show Password
      small#password-strength.password-strength
    .form-group
      label(for='confirm-password') Confirm Password:
      input#confirm-password(type='password' name='confirm-password' placeholder='Confirm your password' required='')
      small#password-match.password-match
    .form-group
      label(for='role') Role:
      select#role(name='role' required='')
        option(value='') Select your role
        option(value='manager') Manager
        option(value='salesAgent') Sales Agent
    .form-group
      label(for='branch') Branch:
      select#branch(name='branch' required='')
        option(value='') Select your branch
        option(value='maganjo') Maganjo
        option(value='matugga') Matugga
    button#next-button(type='button') Next
    .loader(style='display: none;')
      .dot
      .dot
      .dot
    .form-footer
      p
        | Already have an account? 
        a(href='login.pug') Login here
script(src='/public/scripts/signup.js')
